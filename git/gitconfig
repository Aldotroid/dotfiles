[alias]
  cm = commit -m
  ci = commit --interactive
  s = status
  b = branch
  co = checkout
  a = add
  ai = add --interactive
  re = reset
  f = fetch
  l = pull
  p = push
  po = push origin
  d = diff
  lg = log --oneline --decorate --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
[core]
  excludesfile = ~/.gitignore
  editor = vim
[apply]
  whitespace = nowarn
[push]
  default = simple

